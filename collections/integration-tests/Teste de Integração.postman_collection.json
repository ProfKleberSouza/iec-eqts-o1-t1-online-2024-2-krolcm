			"name": "Cadastrar produto",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Validar mensagem de sucesso\", function () {\r",
							"    pm.expect(pm.response.text()).to.include(\"Cadastro realizado com sucesso\");\r",
							"});\r",
							"\r",
							"pm.test(\"Status code é 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"const resposta = pm.response.json();\r",
							"pm.environment.set(\"_idProduto\", resposta._id);\r",
							"\r",
							"pm.test(\"Resposta contém o campo '_id'\", function () {\r",
							"    const id = pm.response.json();\r",
							"    pm.expect(id).to.have.property(\"_id\");\r",
							"});\r",
							"\r",
							"pm.test(\"Campo '_id' não está vazio\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData._id).to.not.be.empty;\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
