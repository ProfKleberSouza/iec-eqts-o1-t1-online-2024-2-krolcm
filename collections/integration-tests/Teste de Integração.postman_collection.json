							"pm.test(\"Produto deletado não consta na lista\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    var IDprodutoDeletado = pm.environment.get(\"IDprodutoDeletado\");\r",
							"    var produtoExiste = jsonData.produtos.some(function(product) {\r",
							"        return product._id === IDprodutoDeletado;\r",
							"    });\r",
							"\r",
							"    pm.expect(produtoExiste).to.be.false;\r",
